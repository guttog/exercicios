package testeVagaJrGPT;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int num;
		int soma;
		
		System.out.print("Digite um numero:");
		num = scan.nextInt();
		
	if(num == 0 || num < 0) {
		do {
			System.out.print("O numéro deve ser maior que '0', tente novamente:");
			num = scan.nextInt();
		} while(num == 0 || num < 0);	
	}
	for(int i = 1; i < num; i++) {
		if(i % 3 == 0 || i % 5 == 0) {
		soma = + i;
		int resultado = soma + i;
		}
		
	}	
		
		System.out.print("Seu numero válido é: "+ num);
	}
}
